Section Header

  + name    := TEST2;
      
  
  
Section Inherit  
  
  - parent_object:OBJECT := OBJECT;  
  
  
Section Public

  - sum : { (INTEGER,INTEGER);INTEGER} :=   sum := { (i,acc:INTEGER); 
               + return : INTEGER;
               (i<0).if { return := acc;} else { return := sum.value (i-1,acc+1)};
               return
             };

  - main <-
  (  
    
    
             sum.value (5000,0).print;
    ); 










